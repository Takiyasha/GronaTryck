{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "{views,controllers,routes,data}/**"
      }
    }
  ],
  "routes": [
    { "src": "/public/(.*)", "dest": "/public/$1" },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff2?|ttf|eot))",
      "dest": "/public/$1"
    },
    { "src": "/(.*)", "dest": "api/index.js" }
  ]
}
