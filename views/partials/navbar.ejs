<!-- Modal Structure (login modal hidden by default) -->
<div id="loginModal" class="modal" style="display: none">
  <div class="modal-content">
    <div class="login-form-container">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2 class="heading-m">Logga in</h2>
      <form id="loginForm">
        <label for="loginEmail">E-postadress</label>
        <input
          type="email"
          id="loginEmail"
          placeholder="Ange e-postadress..."
          required
        />
        <label for="loginPassword">Lösenord</label>
        <input
          type="password"
          id="loginPassword"
          placeholder="Ange lösenord..."
          required
        />
        <div class="remember-forgot">
          <a href="#" class="forgot-password">Har du glömt ditt lösenord?</a>
          <label class="remember-me">
            <input type="checkbox" /> Kom ihåg mig
          </label>
        </div>
        <div class="button-container">
          <div class="register-link">
            <a href="#" id="registerLink">Har du inte ett konto?</a>
          </div>
          <button type="submit">Logga in</button>
        </div>
      </form>
    </div>
    <img
      class="blob-image"
      src="/static/images/infographics-folder/graphical-elements/blob-small.svg"
      alt=""
    />
  </div>
</div>

<!-- Create Account Modal Structure -->
<div id="createAccountModal" class="modal" style="display: none">
  <div class="modal-content">
    <div class="create-account-form-container">
      <span class="close" onclick="closeCreateAccountModal()">&times;</span>
      <h2>Skapa ett konto</h2>
      <form id="createAccountForm">
        <label for="email">E-postadress</label>
        <input
          type="email"
          id="email"
          placeholder="Ange e-postadress..."
          required
        />

        <label for="confirmEmail">Bekräfta e-postadress</label>
        <input
          type="email"
          id="confirmEmail"
          placeholder="Ange e-postadress..."
          required
        />

        <label for="password">Lösenord</label>
        <input
          type="password"
          id="password"
          placeholder="Ange lösenord..."
          required
        />

        <label for="confirmPassword">Bekräfta lösenord</label>
        <input
          type="password"
          id="confirmPassword"
          placeholder="Ange lösenord..."
          required
        />

        <label for="name">Namn</label>
        <input type="text" id="name" placeholder="Ange namn..." required />

        <label for="address">Adress</label>
        <input type="text" id="address" placeholder="Ange adress..." required />

        <label for="postalCode">Postnummer</label>
        <input
          type="text"
          id="postalCode"
          placeholder="Ange postnummer..."
          required
        />

        <label for="phoneNumber">Telefonnummer</label>
        <input
          type="tel"
          id="phoneNumber"
          placeholder="Ange telefonnummer..."
          required
        />

        <div class="button-container">
          <div class="register-link">
            <a href="#" onclick="openLoginModal()">Har du redan ett konto?</a>
          </div>
          <button type="submit">Skapa konto</button>
        </div>
      </form>
    </div>
  </div>
</div>
